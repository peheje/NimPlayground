{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Debug",
            "type": "shell",
            "command": "nim",
            "args": [
                "c",
                "-r",
                "--threads:on",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "taskName": "Release",
            "type": "shell",
            "command": "nim",
            "args": [
                "c",
                "-r",
                "--threads:on",
                "-d:release",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": []
        }
    ]
}